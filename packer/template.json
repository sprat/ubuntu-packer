{
  "builders": [
    {
      "type": "virtualbox-iso",
      "boot_command": [
        "<esc><esc><enter><wait>",
        "/install/vmlinuz ",
        "initrd=/install/initrd.gz ",
        "auto=true ",
        "vga=normal ",
        "fb=false ",
        "file=/floppy/{{user `preseed`}} ",
        "-- <wait><enter>"
      ],
      "boot_wait": "10s",
      "guest_additions_mode": "disable",
      "guest_os_type": "Ubuntu_64",
      "hard_drive_interface": "sata",
      "headless": false,
      "floppy_files": [
        "preseed/*"
      ],
      "iso_url": "{{ user `ubuntu_iso_base_url` }}{{ user `ubuntu_iso_filename` }}",
      "iso_checksum_url": "{{ user `ubuntu_iso_base_url` }}SHA256SUMS",
      "iso_checksum_type": "sha256",
      "iso_interface": "sata",
      "shutdown_command": "echo 'vagrant' | sudo -S shutdown -P now",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "cpus": "{{ user `cpus` }}",
      "memory": "{{ user `memory` }}",
      "disk_size": "{{user `disk_size`}}",
      "vboxmanage": [
        ["storagectl", "{{.Name}}", "--name", "IDE Controller", "--remove"],
        ["modifyvm", "{{.Name}}", "--nictype1", "virtio"],
        ["modifyvm", "{{.Name}}", "--accelerate3d", "on"],
        ["modifyvm", "{{.Name}}", "--vram", "256"]
      ],
      "virtualbox_version_file": "",
      "output_directory": "output-{{ user `box_name` }}",
      "vm_name": "{{ user `box_name` }}"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "chmod +x {{ .Path }} && echo 'vagrant' | {{ .Vars }} sudo -E -S {{ .Path }}",
      "script": "scripts/postinstall.sh"
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "output": "builds/{{ user `box_name` }}_{{.Provider}}.box"
    }
  ],
  "variables": {
    "ubuntu_iso_base_url": "http://cdimage.ubuntu.com/ubuntu-server/bionic/daily/current/",
    "ubuntu_iso_filename": "bionic-server-amd64.iso"
  }
}
