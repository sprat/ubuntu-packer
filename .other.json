{
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "scripts/desktop.sh"
      ],
      "execute_command": "echo '{{ user `ssh_password` }}' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
      "environment_vars": [
        "DESKTOP_PACKAGE={{ user `desktop_package` }}"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "output": "./builds/{{user `box_name`}}.{{.Provider}}.box"
    }
  ],
  "variables": {
    "desktop_package": "xubuntu-desktop"    
  }
}
