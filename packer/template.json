{
  "builders": [
    {
      "boot_command": [
        "<esc><esc><enter><wait>",
        "/casper/vmlinuz initrd=/casper/initrd ",
        "console=ttyS0 console=tty1 quiet ",
        "{{ user `install_options` }} ",
        "---<enter>"
      ],
      "boot_wait": "5s",
      "cpus": "{{ user `cpus` }}",
      "disk_size": "{{user `disk_size`}}",
      "guest_os_type": "Ubuntu_64",
      "headless": true,
      "http_directory": "packer/http",
      "iso_checksum": "file:{{ user `ubuntu_iso_base_url` }}SHA256SUMS",
      "iso_urls": [
        "isos/{{ user `ubuntu_iso_filename` }}",
        "{{ user `ubuntu_iso_base_url` }}{{ user `ubuntu_iso_filename` }}"
      ],
      "memory": "{{ user `memory` }}",
      "output_directory": "builds/{{ user `name` }}",
      "shutdown_command": "echo 'vagrant' | sudo -S shutdown -P now",
      "ssh_handshake_attempts": "1000",
      "ssh_password": "vagrant",
      "ssh_read_write_timeout": "5m",
      "ssh_timeout": "45m",
      "ssh_username": "vagrant",
      "type": "virtualbox-iso",
      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--uart1", "0x3F8", "4"],
        ["modifyvm", "{{.Name}}", "--uartmode1", "file", "serial.log"],
        [
          "modifyvm",
          "{{.Name}}",
          "--nictype1",
          "82540EM"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--graphicscontroller",
          "vmsvga"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--vram",
          "64"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--accelerate3d",
          "on"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--clipboard",
          "bidirectional"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--draganddrop",
          "bidirectional"
        ]
      ],
      "virtualbox_version_file": "",
      "vrdp_bind_address": "0.0.0.0",
      "vrdp_port_min": 5900,
      "vrdp_port_max": 5900,
      "vm_name": "{{ user `name` }}"
    }
  ],
  "post-processors": [
    {
      "output": "builds/{{ user `name` }}_{{.Provider}}.box",
      "type": "vagrant",
      "vagrantfile_template": "packer/Vagrantfile_template"
    }
  ],
  "provisioners": [
    {
      "execute_command": "echo 'vagrant' | sudo -S bash {{ .Path }}",
      "expect_disconnect": true,
      "pause_before": "60s",
      "script": "packer/scripts/1_upgrade.sh",
      "type": "shell"
    },
    {
      "execute_command": "echo 'vagrant' | sudo -S bash {{ .Path }}",
      "expect_disconnect": true,
      "pause_before": "60s",
      "script": "packer/scripts/2_virtualbox.sh",
      "type": "shell"
    },
    {
      "execute_command": "echo 'vagrant' | sudo -S bash {{ .Path }}",
      "pause_before": "60s",
      "script": "packer/scripts/3_configure_and_cleanup.sh",
      "type": "shell"
    }
  ]
}

