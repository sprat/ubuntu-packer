{
  "builders": [
    {
      "type": "virtualbox-ovf",
      "source_path": "{{user `ubuntu_box_path`}}",
      "guest_additions_mode": "disable",
      "shutdown_command": "echo 'vagrant' | sudo -S shutdown -P now",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_username": "vagrant",
      "ssh_wait_timeout": "10000s"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "script": "install_desktop.sh",
      "execute_command": "echo '{{ user `ssh_password` }}' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
      "environment_vars": [
        "DESKTOP_PACKAGE=xubuntu-desktop"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "output": "./builds/{{user `box_basename`}}.{{.Provider}}.box"
    }
  ],
  "variables": {
    "box_basename": "xubuntu-18.04",
    "ubuntu_box_path": "{{env `HOME`}}/.vagrant.d/boxes/bento-VAGRANTSLASH-ubuntu-18.04/201812.27.0/virtualbox/box.ovf"
  }
}
