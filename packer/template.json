{
  "builders": [
    {
      "type": "virtualbox-iso",
      "boot_command": [
        "<esc><esc><enter><wait>",
        "/install/vmlinuz ",
        "initrd=/install/initrd.gz ",
        "auto=true ",
        "vga=normal ",
        "fb=false ",
        "file=/floppy/{{ user `profile` }}.cfg ",
        "-- <wait><enter>"
      ],
      "boot_wait": "25s",
      "guest_os_type": "Ubuntu_64",
      "headless": true,
      "floppy_files": [
        "preseed/*"
      ],
      "iso_url": "{{ user `ubuntu_iso_base_url` }}{{ user `ubuntu_iso_filename` }}",
      "iso_checksum_url": "{{ user `ubuntu_iso_base_url` }}SHA256SUMS",
      "iso_checksum_type": "sha256",
      "iso_interface": "sata",
      "hard_drive_interface": "sata",
      "shutdown_command": "echo 'vagrant' | sudo -S shutdown -P now",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_wait_timeout": "10000s",
      "cpus": "{{ user `cpus` }}",
      "memory": "{{ user `memory` }}",
      "disk_size": "{{user `disk_size`}}",
      "vboxmanage": [
        ["storagectl", "{{.Name}}", "--name", "IDE Controller", "--remove"],
        ["modifyvm", "{{.Name}}", "--nictype1", "virtio"]
      ],
      "virtualbox_version_file": "",
      "vm_name": "{{ user `name` }}",
      "output_directory": "outputs"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "chmod +x {{ .Path }} && echo 'vagrant' | {{ .Vars }} sudo -E -S {{ .Path }}",
      "expect_disconnect": true,
      "environment_vars": [
        "DEBIAN_FRONTEND=noninteractive"
      ],
      "scripts": [
        "scripts/update.sh",
        "scripts/virtualbox.sh",
        "scripts/configure.sh"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "output": "boxes/{{ user `name` }}_{{.Provider}}.box",
      "vagrantfile_template": "packer/Vagrantfile_{{ user `profile` }}"
    }
  ]
}
