{
  "builders": [
    {
      "type": "virtualbox-iso",
      "guest_os_type": "Ubuntu_64",
      "headless": true,
      "boot_command": [
        "<esc><wait><esc><wait><esc><wait><enter>",
        "/casper/vmlinuz initrd=/casper/initrd ",
        "console=ttyS0 console=tty1 quiet ",
        "{{ user `install_options` }} ",
        "---<wait><enter>"
      ],
      "boot_wait": "7s",
      "http_directory": "packer/http",
      "iso_urls": [
        "isos/{{ user `ubuntu_iso_filename` }}",
        "{{ user `ubuntu_iso_base_url` }}{{ user `ubuntu_iso_filename` }}"
      ],
      "iso_checksum_url": "{{ user `ubuntu_iso_base_url` }}SHA256SUMS",
      "iso_checksum_type": "sha256",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_wait_timeout": "30m",
      "ssh_read_write_timeout": "5m",
      "ssh_handshake_attempts": "1000",
      "shutdown_command": "echo 'vagrant' | sudo -S shutdown -P now",
      "cpus": "{{ user `cpus` }}",
      "memory": "{{ user `memory` }}",
      "disk_size": "{{user `disk_size`}}",
      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--uart1", "0x3F8", "4"],
        ["modifyvm", "{{.Name}}", "--uartmode1", "file", "serial.log"],
        ["modifyvm", "{{.Name}}", "--nictype1", "virtio"],
        ["modifyvm", "{{.Name}}", "--graphicscontroller", "vmsvga"],
        ["modifyvm", "{{.Name}}", "--vram", "64"],
        ["modifyvm", "{{.Name}}", "--accelerate3d", "on"],
        ["modifyvm", "{{.Name}}", "--clipboard", "bidirectional"],
        ["modifyvm", "{{.Name}}", "--draganddrop", "bidirectional"]
      ],
      "virtualbox_version_file": "",
      "vm_name": "{{ user `name` }}",
      "output_directory": "builds/output-{{ user `name` }}"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "echo 'vagrant' | sudo -S bash {{ .Path }}",
      "script": "packer/scripts/1_upgrade.sh",
      "expect_disconnect": true,
      "pause_before": "60s"
    },
    {
      "type": "shell",
      "execute_command": "echo 'vagrant' | sudo -S bash {{ .Path }}",
      "script": "packer/scripts/2_virtualbox.sh",
      "expect_disconnect": true,
      "pause_before": "60s"
    },
    {
      "type": "shell",
      "execute_command": "echo 'vagrant' | sudo -S bash {{ .Path }}",
      "script": "packer/scripts/3_configure_and_cleanup.sh",
      "pause_before": "60s"
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "output": "builds/{{ user `name` }}_{{.Provider}}.box",
      "vagrantfile_template": "packer/Vagrantfile_template"
    }
  ]
}
